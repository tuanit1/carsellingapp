<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/sub_color"
    tools:context=".fragments.FragmentProfile">
    <RelativeLayout
        android:id="@+id/rl_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/sub_color">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/main_color"
                            android:layout_marginBottom="3dp">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_user"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/user_ic"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/iv_user"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_color"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="7dp"
                                    android:textSize="22dp"
                                    android:text="name"/>
                                <LinearLayout
                                    android:id="@+id/ll_ratingbar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:clickable="true"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center_vertical">
                                    <TextView
                                        android:id="@+id/tv_rating_score"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/text_color"
                                        android:layout_marginRight="5dp"
                                        android:textSize="16dp" />
                                    <RatingBar
                                        android:id="@+id/ratingBar"
                                        style="?attr/ratingBarStyleSmall"
                                        android:progressTint="#f9d71c"
                                        android:secondaryProgressTint="#f9d71c"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:stepSize="0.1"
                                        android:rating="3.7"/>
                                    <TextView
                                        android:id="@+id/tv_rating_count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/text_color"
                                        android:layout_marginLeft="5dp"
                                        android:textSize="16dp"
                                        android:text="(0)"/>
                                </LinearLayout>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cv_follow"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginLeft="5dp"
                                    android:clickable="true"
                                    android:foreground="?attr/selectableItemBackground"
                                    app:cardCornerRadius="10dp"
                                    android:elevation="10dp">
                                    <TextView
                                        android:id="@+id/tv_cv_follow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginBottom="3dp"
                                        android:layout_gravity="center"
                                        android:textColor="@color/steel_blue"
                                        android:textSize="15dp"
                                        android:text="Follow"/>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>


                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:layout_marginBottom="3dp"
                            android:weightSum="2">
                            <LinearLayout
                                android:id="@+id/btn_follower"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_marginRight="1.5dp"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_height="match_parent"
                                android:background="@color/main_color"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/tv_follower_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_color"
                                    android:textSize="17dp"
                                    android:text="Followers (0)"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/btn_following"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_marginLeft="1.5dp"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_height="match_parent"
                                android:background="@color/main_color"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/tv_following_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/text_color"
                                    android:textSize="17dp"
                                    android:text="Following (0)"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/btn_edit"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_marginBottom="3dp"
                            android:clickable="true"
                            android:background="@color/main_color"
                            android:foreground="?attr/selectableItemBackground"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/edit_ic"
                                android:backgroundTint="@color/text_color"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:textSize="17dp"
                                android:text="Edit profile"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:background="@color/main_color"
                            android:layout_marginBottom="3dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:textSize="20dp"
                                android:layout_margin="5dp"
                                android:text="Contact"/>
                            <TextView
                                android:id="@+id/tv_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:textSize="15dp"
                                android:layout_margin="5dp"
                                android:text="Email: "/>
                            <TextView
                                android:id="@+id/tv_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:textSize="15dp"
                                android:layout_margin="5dp"
                                android:text="Phone: "/>
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/btn_viewall"
                            android:layout_width="match_parent"
                            android:background="@color/main_color"
                            android:layout_height="50dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/text_color"
                                android:layout_marginLeft="15dp"
                                android:layout_centerVertical="true"
                                android:textSize="20dp"
                                android:text="Listing"/>
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_ads"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tv_ads_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        android:text="@string/ads_list_empty"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/progressbar_color"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/ll_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@color/main_color"
        android:clickable="true"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="empty"
            android:textSize="20dp"
            android:textColor="@color/text_color"
            android:gravity="center_horizontal" />
        <Button
            android:id="@+id/btn_try"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/steel_blue"
            android:textColor="#ffffff"
            android:text="Try again"/>
    </LinearLayout>
</RelativeLayout>